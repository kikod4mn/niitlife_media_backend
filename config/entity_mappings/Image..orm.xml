<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        https://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Entity\Image" repository-class="App\Repository\ImageRepository">

        <unique-constraints>
            <unique-constraint columns="id, slug"/>
        </unique-constraints>

        <id name="id" column="id" type="uuid">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="Ramsey\Uuid\Doctrine\UuidGenerator"/>
        </id>

        <field name="title" type="string" length="255" nullable="false"/>
        <field name="slug" type="string" length="255" nullable="false" unique="true"/>
        <field name="description" type="text" nullable="false"/>
        <field name="original" type="text" length="500" nullable="false"/>
        <field name="thumbnail" type="text" length="500" nullable="false"/>

        <many-to-one field="category" target-entity="App\Entity\ImageCategory" inversed-by="images">
            <join-column name="category_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>

        <many-to-one field="author" target-entity="App\Entity\User" inversed-by="images">
            <cascade>
                <cascade-remove/>
            </cascade>
            <join-column name="author_id" referenced-column-name="id" on-delete="CASCADE" nullable="false"/>
        </many-to-one>

        <many-to-many field="likedBy" target-entity="App\Entity\User" inversed-by="imagesLiked">
            <cascade>
                <cascade-all/>
            </cascade>
            <join-table name="image_likes">
                <join-columns>
                    <join-column name="image_id" referenced-column-name="id" nullable="false"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="user_id" referenced-column-name="id" nullable="false"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <many-to-many field="tags" target-entity="App\Entity\Tag" inversed-by="images">
            <cascade>
                <cascade-all/>
            </cascade>
            <join-table name="image_tags">
                <join-columns>
                    <join-column name="image_id" referenced-column-name="id" nullable="false"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="tag_id" referenced-column-name="id" nullable="false"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>

    </entity>

</doctrine-mapping>
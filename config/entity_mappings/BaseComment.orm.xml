<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        https://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="App\Entity\BaseComment">
        <discriminator-map>
            <discriminator-mapping value="post_comment" class="App\Entity\PostComment"/>
            <discriminator-mapping value="image_comment" class="App\Entity\ImageComment"/>
        </discriminator-map>

        <unique-constraints>
            <unique-constraint columns="id"/>
        </unique-constraints>

        <id name="id" column="id" type="uuid">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="Ramsey\Uuid\Doctrine\UuidGenerator"/>
        </id>

        <field name="body" type="text" length="4000"/>
        <field name="publishedAt" type="datetime" nullable="true"/>
        <field name="createdAt" type="datetime"/>
        <field name="trashedAt" type="datetime" nullable="true"/>
        <field name="updatedAt" type="datetime" nullable="true"/>
        <field name="likeCount" type="bigint"/>
        <field name="weeklyLikeCount" type="bigint"/>

    </mapped-superclass>

</doctrine-mapping>